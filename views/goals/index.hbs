<br>
<h4 class="text-body"><b>GOALS IN PROGRESS ...</b></h4>
<br>
<div class="row">
    {{#each goals}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5><i class="fas fa-award"></i>
                    <i class="fas fa-graduation-cap"></i>
                    {{title}}
                </h5>
                <p>{{stripTags (truncate body 40)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/goals/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/goals/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No completed goals to display</p>
    {{/each}}
</div>