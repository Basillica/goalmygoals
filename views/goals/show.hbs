<div class="row">
    <div class="col s12 m8">
        <h3 class="text-body">{{goal.title}}
            <small>{{{editIcon goal.user user goal._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{goal.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{goal.user.displayName}}</span>
                <img src="{{goal.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/goals/user/{{goal.user._id}}">More From {{goal.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>